[Unit]
Description=Ergo Chat IRC Server
After=network.target
# If you are using MySQL for history storage, comment out the above line
# and uncomment these two instead (you must independently install and configure
# MySQL for your system):
# Wants=mysql.service
# After=network.target mysql.service
After=network.target

[Service]
Type=notify
User=ergo
WorkingDirectory=/usr/share/ergo
ExecStart=/usr/share/ergo/ergo run --conf /usr/share/ergo/ircd.yaml
ExecReload=/usr/bin/kill -HUP $MAINPID
Restart=on-failure
LimitNOFILE=1048576
NotifyAccess=main
# Uncomment this for a hidden service:
# PrivateNetwork=true

[Install]
WantedBy=multi-user.target